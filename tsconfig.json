{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*"],
      "@screen/*": ["src/screens/*"],
      "@action/*": ["src/data/actions/*"],
      "@actions": ["src/data/actions/index"],
      "@reducer/*": ["src/data/reducers/*"],
      "@reducers": ["src/data/reducers/index"],
      "@contexts": ["src/data/contexts/index"],
      "@model/*": ["src/data/models/*"],
      "@models": ["src/data/models/index"],
      "@saga/*": ["src/data/sagas/*"],
      "@sagas": ["src/data/sagas/index"],
      "@type/*": ["src/data/types/*"],
      "@types": ["src/data/types/index"],
      "@navigation": ["core/functions/navigation/index"],
      "@svg": ["src/assets/svg/Svg"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "metro.config.js", "jest.config.js"]
}
